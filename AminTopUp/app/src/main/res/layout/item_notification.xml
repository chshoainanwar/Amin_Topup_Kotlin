<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/mainLL"
    android:layout_marginVertical="@dimen/_5sdp"
    android:layout_height="wrap_content"
    android:background="@color/light_blue"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNotification"
        android:layout_toLeftOf="@+id/ivStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_10sdp"
        android:text="Unfortunately, Your Topup transaction was not successful due to [Error Description]. "
        android:textColor="@color/darkStrokeAndTextClr"
        android:textSize="@dimen/_12sdp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivStatus"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/_10sdp"
        android:src="@drawable/ic_iv_tick" />

</RelativeLayout>